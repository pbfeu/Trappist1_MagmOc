doi = {10.1089/ast.2015.1384},
file = {:Users/patrickbarth/Library/Application Support/Mendeley Desktop/Downloaded/Gebauer et al. - 2017 - Evolution of Earth-like Extrasolar Planetary Atmospheres Assessing the Atmospheres and Biospheres of Early Earth.pdf:pdf},
journal = {Astrobiology},
number = {1},
pages = {27--54},
title = {{Evolution of Earth-like Extrasolar Planetary Atmospheres: Assessing the Atmospheres and Biospheres of Early Earth Analog Planets with a Coupled Atmosphere Biogeochemical Model}},
