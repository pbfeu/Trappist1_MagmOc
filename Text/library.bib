doi = {10.1016/J.ICARUS.2013.07.025},
file = {:Users/patrickbarth/Library/Application Support/Mendeley Desktop/Downloaded/Driscoll, Bercovici - 2013 - Divergent evolution of Earth and Venus Influence of degassing, tectonics, and magnetic fields.pdf:pdf},
issn = {0019-1035},
journal = {Icarus},
month = {nov},
number = {2},
pages = {1447--1464},
publisher = {Academic Press},
title = {{Divergent evolution of Earth and Venus: Influence of degassing, tectonics, and magnetic fields}},
url = {https://www.sciencedirect.com/science/article/pii/S0019103513003266?via{\%}3Dihub},
volume = {226},
