doi = {10.1093/mnras/stw1386},
journal = {monthly Notices of the Royal Astronomical Society},
number = {1},
pages = {1053--1061},
title = {{An optical transmission spectrum of the transiting hot Jupiter in the metal-poor WASP-98 planetary system}},
