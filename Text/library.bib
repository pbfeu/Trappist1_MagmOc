issn = {0035-8711},
journal = {monthly Notices of the Royal Astronomical Society},
keywords = {1 i n t,atmospheres,brown dwarfs,detected in the habitable,earth-like planets have been,hzs,individual,low-mass,planet star interactions,planets and satellites,ro d u c,stars,t i o n,trappist-1,zones},
number = {3},
