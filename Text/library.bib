issn = {10902643},
journal = {Icarus},
keywords = {Albedo,Atmospheres,Modeling,Radiative transfer,Spectroscopy},
number = {August 2018},
pages = {583--590},
publisher = {Elsevier},
title = {{Modeling the albedo of Earth-like magma ocean planets with H2O-CO2 atmospheres}},
url = {https://doi.org/10.1016/j.icarus.2018.08.023},
volume = {317},
year = {2019}
