@article{Bonfils2018,
abstract = {GJ1132 is a nearby red dwarf known to host a transiting Earth-size planet. After its initial detection, we pursued an intense follow-up with the HARPS velocimeter. We now confirm the detection of GJ1132b with radial velocities only. We refined its orbital parameters and, in particular, its mass ({\$}m{\_}b = 1.66\backslashpm0.23 M{\_}\backslashoplus{\$}), density ({\$}\backslashrho{\_}b = 6.3\backslashpm1.3{\$} g.cm{\$}{\^{}}{\{}-3{\}}{\$}) and eccentricity ({\$}e{\_}b {\textless} 0.22 {\$}; 95$\backslash${\%}). We also detect at least one more planet in the system. GJ1132c is a super-Earth with period {\$}P{\_}c = 8.93\backslashpm0.01{\$} days and minimum mass {\$}m{\_}c \backslashsin i{\_}c = 2.64\backslashpm0.44{\~{}}M{\_}\backslashoplus{\$}. Receiving about 1.9 times more flux than Earth in our solar system, its equilibrium temperature is that of a temperate planet ({\$}T{\_}{\{}eq{\}}=230-300{\$} K for albedos {\$}A=0.75-0.00{\$}) and places GJ1132c near the inner edge of the so-called habitable zone. Despite an a priori favourable orientation for the system, {\$}Spitzer{\$} observations reject most transit configurations, leaving a posterior probability {\$}{\textless}1\backslash{\%}{\$} that GJ1132c transits. GJ1132(d) is a third signal with period {\$}P{\_}d = 177\backslashpm5{\$} days attributed to either a planet candidate with minimum mass {\$}m{\_}d \backslashsin i{\_}d = 8.4{\^{}}{\{}+1.7{\}}{\_}{\{}-2.5{\}}{\~{}}M{\_}\backslashoplus{\$} or stellar activity. (abridged)},
